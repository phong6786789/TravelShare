<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ChiTietPhongHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <View
            android:id="@+id/ivPhongS"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:background="@color/placeholder_bg"
            android:scaleType="fitXY" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/ivPhongS"
            android:layout_alignParentRight="true"
            android:background="@color/placeholder_bg" />

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivPhongS"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <View
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                android:background="@color/placeholder_bg" />

            <View
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:background="@color/placeholder_bg" />
        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/line2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:background="@color/placeholder_bg" />

        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnDatPhongChiTietS"
            android:layout_below="@id/line1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@color/placeholder_bg"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@+id/ivUser"
                    android:orientation="vertical">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/placeholder_bg"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="150dp"
                        android:layout_height="16dp"
                        android:background="@color/placeholder_bg" />
                </LinearLayout>

                <View
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:background="@color/placeholder_bg"
                    android:text="Xem"
                    android:textColor="@color/bg" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="90dp"
                    android:background="@color/placeholder_bg"
                    android:src="@drawable/phone" />

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="90dp"
                    android:background="@color/placeholder_bg"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/placeholder_bg"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="@color/placeholder_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/placeholder_bg"
                android:padding="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/placeholder_bg"
                android:padding="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/placeholder_bg"
                android:padding="10dp" />
        </LinearLayout>

        <View
            android:id="@+id/btnDatPhongChiTietS"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue"
            android:backgroundTint="@color/placeholder_bg"
            android:textColor="@color/bg"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

</FrameLayout>