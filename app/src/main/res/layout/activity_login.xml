<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".login.Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />

   <LinearLayout
       android:layout_below="@id/logo"
       android:gravity="center_vertical"
       android:layout_above="@id/btnRegister"
       android:layout_centerInParent="true"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/logo2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="TRAVEL SHARE"
           android:textAlignment="center"
           android:textColor="@color/blue"
           android:textSize="40sp"
           android:textStyle="bold"
           android:theme="@style/title" />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/l2"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/logo2"
           android:layout_marginTop="8dp"
           android:layout_marginBottom="8dp">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/edtUserName"
               android:layout_width="match_parent"
               android:layout_height="fill_parent"
               android:drawableLeft="@drawable/user"
               android:drawablePadding="8dp"
               android:hint="Nhập tên tài khoản"
               android:inputType="text"
               android:padding="8dp"
               android:paddingLeft="20dp" />
       </com.google.android.material.textfield.TextInputLayout>


       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/pass"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="fill_parent"
           android:layout_height="48dp"
           android:layout_marginBottom="8dp"
           app:passwordToggleEnabled="true">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/edtPassword"
               android:layout_width="match_parent"
               android:layout_height="fill_parent"
               android:drawableStart="@drawable/pass"
               android:drawablePadding="8dp"
               android:hint="Nhập mật khẩu"
               android:inputType="textPassword"
               android:padding="8dp"
               android:paddingLeft="20dp" />
       </com.google.android.material.textfield.TextInputLayout>

       <CheckBox
           android:id="@+id/checkbox"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/pass"
           android:layout_marginBottom="8dp"
           android:buttonTint="@color/blue"
           android:text="Nhớ mật khẩu" />


       <Button
           android:id="@+id/btnLogin"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:layout_below="@id/checkbox"
           android:background="@color/blue"
           android:padding="10dp"
           android:text="Đăng nhập"
           android:textColor="@color/bg"
           android:textStyle="bold" />


       <TextView
           android:id="@+id/hoac"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/btnLogin"
           android:layout_marginTop="20dp"
           android:text="Hoặc đăng nhập với"
           android:textAlignment="center"
           android:textColor="@color/blue" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/hoac"
           android:gravity="center">


           <ImageView
               android:id="@+id/FBView"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_margin="20dp"
               android:onClick="loginFacebook"
               android:padding="10dp"
               android:src="@drawable/facebook" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="hoặc" />

           <ImageView
               android:id="@+id/GGView"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_below="@+id/hoac"
               android:layout_margin="20dp"
               android:padding="10dp"
               android:src="@drawable/google" />
       </LinearLayout>

       <com.facebook.login.widget.LoginButton
           android:id="@+id/loginFB"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:visibility="invisible" />
   </LinearLayout>

    <TextView
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Chưa có tài khoản? ĐĂNG KÝ"
        android:textAlignment="center" />

</RelativeLayout>