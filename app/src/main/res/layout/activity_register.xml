<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center"
    android:ignoreGravity="@id/logo"
    tools:context=".login.Register">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo" />

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:theme="@style/title"
            android:textAlignment="center"
            android:id="@+id/txtRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="ĐĂNG KÝ"
            android:textColor="@color/blue"
            android:textSize="40sp"
            android:textStyle="bold" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l1"
            android:layout_below="@+id/txtRegister"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:id="@+id/edtRegUser"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/border"
                android:drawableStart="@drawable/user"
                android:hint="Nhập tên tài khoản"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pass"
            android:layout_marginBottom="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:drawablePadding="10dp"
                android:id="@+id/edtRegPassword"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:drawableStart="@drawable/pass"
                android:hint="Nhập mật khẩu"
                android:inputType="textPassword"
                android:padding="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pass2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="20dp"
            android:drawablePadding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:drawablePadding="10dp"
                android:id="@+id/edtRePassword"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/pass"
                android:drawableStart="@drawable/pass"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass2"
            android:orientation="horizontal">

            <Button
                android:textStyle="bold"
                android:padding="10dp"
                android:id="@+id/btnReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:text="Đăng ký"
                android:textColor="@color/bg" />

            <Button
                android:padding="10dp"
                android:textStyle="bold"
                android:id="@+id/btnRelay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:text="HỦY"
                android:textColor="@color/bg" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>