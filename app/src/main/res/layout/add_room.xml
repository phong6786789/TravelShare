<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border2"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@color/blue"
        android:text="THÊM PHÒNG"
        android:textAlignment="center"
        android:textColor="@color/bg"
        android:textSize="25sp"
        android:textStyle="bold"
        android:theme="@style/title" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTPTieuDe"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border"
            android:hint="Nhập tiêu đề"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTPGiaPhong"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border"
            android:hint="Giá Phòng/ngày"
            android:inputType="number"
            android:padding="8dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTPDiaChi"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/border"
                android:hint="Nhập địa chỉ"
                android:inputType="text"
                android:padding="8dp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <ImageView
            android:id="@+id/ivMap"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/place" />
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTPMoTaChiTietPhong"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border"
            android:hint="Mô tả chi tiết phòng"
            android:inputType="text"
            android:padding="8dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/ivH1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/photo" />

        <ImageView
            android:id="@+id/ivH2"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/photo" />

        <ImageView
            android:id="@+id/ivH3"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/photo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTPThem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:padding="10dp"
            android:text="THÊM"
            android:textColor="@color/bg"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTPNhapLai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:padding="10dp"
            android:text="NHẬP LẠI"
            android:textColor="@color/bg"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>